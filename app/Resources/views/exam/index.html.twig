{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exams list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Examdate</th>
                <th>Examname</th>
                <th>Examdescription</th>
                <th>Otherdetails</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td><a href="{{ path('exam_show', { 'id': exam.id }) }}">{{ exam.id }}</a></td>
                <td>{% if exam.examDate %}{{ exam.examDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ exam.examName }}</td>
                <td>{{ exam.examDescription }}</td>
                <td>{{ exam.otherDetails }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('exam_show', { 'id': exam.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('exam_edit', { 'id': exam.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exam_new') }}">Create a new exam</a>
        </li>
    </ul>
{% endblock %}
